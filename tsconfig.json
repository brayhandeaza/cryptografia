{
	"compilerOptions": {
		"strict": true,
		"module": "commonJS",
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"declaration": true,
		"noEmit": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"target": "es2022",
		"lib": ["es2022", "DOM"]
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
